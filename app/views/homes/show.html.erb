<div>
	<%= render 'home', home: @home %>

	<hr>

	<footer>
		<% if @current_user == @user %>
			<%= link_to 'Edit', edit_user_home_path(@user, @home) %> |
			<%= link_to 'Delete', user_home_path(@user, @home), method: :delete, data: {confirm: "Are you sure you want to delete this home? \nThis cannot be undone."} %> |
			<% if @home.address %>
				<%= link_to 'Edit Address', edit_address_path(@home.address) %>
			<% else %>
				<%= link_to 'Add Address', new_address_path(home_id: @home.id) %>
			<% end %>
		<% else %>
			<div>This home's seller is <%= link_to @user.name, user_path(@user) %></div>
		<% end %>
	</footer>
</div>
